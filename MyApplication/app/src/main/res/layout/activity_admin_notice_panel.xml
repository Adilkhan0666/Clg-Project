<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminNoticePanelActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="NOTICE"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/circle" />

    <EditText
        android:id="@+id/adminNoticePanel_editText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:hint="Enter Notice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/adminNoticePanel_clickButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/circle"
            android:text="Submit" />

    </LinearLayout>

    <Button
        android:id="@+id/enter_student_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#8585"
        android:textSize="14dp"
        android:padding="3dp"
        android:text="Enter Student Details"
        android:textColor="#fff" />


</LinearLayout>